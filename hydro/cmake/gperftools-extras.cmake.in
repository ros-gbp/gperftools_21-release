
find_library(GPERFTOOLS_TCMALLOC
  NAMES tcmalloc
  HINTS @CATKIN_DEVEL_PREFIX@/lib @CMAKE_INSTALL_PREFIX@/lib)

find_library(GPERFTOOLS_PROFILER
  NAMES profiler
  HINTS @CATKIN_DEVEL_PREFIX@/lib @CMAKE_INSTALL_PREFIX@/lib)

find_library(GPERFTOOLS_TCMALLOC_AND_PROFILER
  NAMES tcmalloc_and_profiler
  HINTS @CATKIN_DEVEL_PREFIX@/lib @CMAKE_INSTALL_PREFIX@/lib)

if(NOT GPERFTOOLS_TCMALLOC)
  set(GPERFTOOLS_TCMALLOC @CATKIN_DEVEL_PREFIX@/lib/libtcmalloc.so)
  set(GPERFTOOLS_PROFILER @CATKIN_DEVEL_PREFIX@/lib/libprofiler.so)
  set(GPERFTOOLS_TCMALLOC_AND_PROFILER @CATKIN_DEVEL_PREFIX@/lib/libtcmalloc_and_profiler.so)
endif()

set(GPERFTOOLS_LIBRARIES ${GPERFTOOLS_TCMALLOC_AND_PROFILER})
